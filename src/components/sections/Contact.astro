<style>
	/* Contact Section */
	.contact {
		padding: 5rem 0;
		background: linear-gradient(135deg, var(--secondary-color) 0%, #ffffff 50%);
	}

	.contact__content {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Contact Cards */
	.contact__cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.contact__card {
		background: white;
		border-radius: var(--border-radius);
		padding: 2rem;
		box-shadow: var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
		position: relative;
	}

	.contact__card:hover {
		transform: translateY(-8px);
		box-shadow: var(--shadow-large);
	}

	.contact__card--primary {
		border: 2px solid var(--primary-color);
		background: linear-gradient(135deg, rgba(37, 154, 140, 0.03) 0%, white 100%);
	}

	.contact__card--primary::before {
		content: "Recomendado";
		position: absolute;
		top: -12px;
		left: 50%;
		transform: translateX(-50%);
		background: var(--primary-color);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.contact__card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.contact__icon {
		width: 60px;
		height: 60px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.contact__icon--instagram {
		background: linear-gradient(
    to right,
    #833ab4,#fd1d1d,#fcb045
  );
	}

	.contact__info h3 {
		color: var(--text-dark);
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.25rem;
	}

	.contact__info p {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.contact__number,
	.contact__username {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--primary-color);
		margin-bottom: 1.5rem;
		text-align: center;
		padding: 0.75rem;
		background: rgba(37, 154, 140, 0.1);
		border-radius: 8px;
		border: 1px solid rgba(37, 154, 140, 0.2);
	}

	.contact__phones {
		margin-bottom: 1.5rem;
	}

	.phone__item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--border-color);
	}

	.phone__item:last-child {
		border-bottom: none;
	}

	.phone__label {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.phone__number {
		color: var(--text-dark);
		font-weight: 600;
	}

	.contact__actions {
		display: flex;
		gap: 0.75rem;
	}

	.contact__actions .btn {
		flex: 1;
		justify-content: center;
	}

	/* Information Grid */
	.contact__grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.contact__info-card {
		background: white;
		border-radius: var(--border-radius);
		padding: 1.5rem;
		box-shadow: var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.contact__info-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-medium);
	}

	.info__icon {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.25rem;
		margin-bottom: 1rem;
	}

	.info__content h4 {
		color: var(--text-dark);
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
	}

	.info__content p {
		color: var(--text-light);
		line-height: 1.6;
		margin-bottom: 0.75rem;
	}

	.info__link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.info__link:hover {
		color: var(--accent-color);
	}

	/* Schedule */
	.schedule {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.schedule__item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem;
		background: rgba(37, 154, 140, 0.05);
		border-radius: 6px;
		border-left: 3px solid var(--primary-color);
	}

	.schedule__item--closed {
		background: rgba(239, 68, 68, 0.05);
		border-left-color: #ef4444;
	}

	.schedule__item span {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.schedule__item strong {
		color: var(--text-dark);
		font-weight: 600;
	}

	.schedule__item--closed strong {
		color: #ef4444;
	}

	/* Services List */
	.services__list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.services__list li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 0;
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.services__list i {
		color: var(--primary-color);
		width: 16px;
		flex-shrink: 0;
	}

	/* Rating */
	.rating {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-top: 0.75rem;
	}

	.stars {
		display: flex;
		gap: 0.25rem;
	}

	.stars i {
		color: #fbbf24;
		font-size: 0.9rem;
	}

	.rating span {
		color: var(--text-light);
		font-size: 0.85rem;
		font-weight: 500;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.contact {
			padding: 4rem 0;
		}

		.contact__cards {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			margin-bottom: 3rem;
		}

		.contact__card {
			padding: 1.5rem;
		}

		.contact__grid {
			grid-template-columns: 1fr;
			gap: 1.25rem;
		}

		.contact__actions {
			flex-direction: column;
		}

		.contact__card-header {
			flex-direction: column;
			text-align: center;
			gap: 0.75rem;
		}

		.schedule__item {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.25rem;
		}
	}

	@media (max-width: 480px) {
		.contact__card {
			padding: 1.25rem;
		}

		.contact__info-card {
			padding: 1.25rem;
		}

		.contact__icon {
			width: 50px;
			height: 50px;
			font-size: 1.25rem;
		}

		.info__icon {
			width: 40px;
			height: 40px;
			font-size: 1rem;
		}
	}
</style>
