<style>
	/* Contact Section */
	.contact {
		padding: 5rem 0;
		background: linear-gradient(135deg, var(--secondary-color) 0%, #ffffff 50%);
	}

	.contact__content {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Contact Cards */
	.contact__cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.contact__card {
		background: white;
		border-radius: var(--border-radius);
		padding: 2rem;
		box-shadow: var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
		position: relative;
	}

	.contact__card:hover {
		transform: translateY(-8px);
		box-shadow: var(--shadow-large);
	}

	.contact__card--primary {
		border: 2px solid var(--primary-color);
		background: linear-gradient(135deg, rgba(37, 154, 140, 0.03) 0%, white 100%);
	}

	.contact__card--primary::before {
		content: "Recomendado";
		position: absolute;
		top: -12px;
		left: 50%;
		transform: translateX(-50%);
		background: var(--primary-color);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.contact__card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.contact__icon {
		width: 60px;
		height: 60px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.contact__icon--instagram {
		background: linear-gradient(
    to right,
    #833ab4,#fd1d1d,#fcb045
  );
	}

	.contact__info h3 {
		color: var(--text-dark);
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.25rem;
	}

	.contact__info p {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.contact__number,
	.contact__username {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--primary-color);
		margin-bottom: 1.5rem;
		text-align: center;
		padding: 0.75rem;
		background: rgba(37, 154, 140, 0.1);
		border-radius: 8px;
		border: 1px solid rgba(37, 154, 140, 0.2);
	}

	.contact__phones {
		margin-bottom: 1.5rem;
	}

	.phone__item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--border-color);
	}

	.phone__item:last-child {
		border-bottom: none;
	}

	.phone__label {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.phone__number {
		color: var(--text-dark);
		font-weight: 600;
	}

	.contact__actions {
		display: flex;
		gap: 0.75rem;
	}

	.contact__actions .btn {
		flex: 1;
		justify-content: center;
	}

	/* Information Grid */
	.contact__grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	/* Location Section */
	.contact__location {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		margin-top: 2rem;
		align-items: stretch;
	}

	/* Map Section */
	.contact__map {
		position: relative;
	}

	.map__container {
		position: relative;
		border-radius: var(--border-radius);
		overflow: hidden;
		box-shadow: var(--shadow-medium);
		height: 450px;
		background: #f8fafc;
	}

	.map__image,
	.map__iframe {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
		border-radius: var(--border-radius);
	}

	.map__container:hover .map__image,
	.map__container:hover .map__iframe {
		transform: scale(1);
	}

	.map__overlay {
		position: absolute;
		bottom: 1rem;
		left: 1rem;
		right: 1rem;
		display: flex;
		justify-content: center;
	}

	.map__link {
		background: rgba(37, 154, 140, 0.95);
		color: white;
		padding: 0.75rem 1.5rem;
		border-radius: 25px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.map__link:hover {
		background: rgba(37, 154, 140, 1);
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(37, 154, 140, 0.3);
	}

	/* Info Section */
	.contact__info-section {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		height: 450px;
	}

	.contact__info-card--clinic,
	.contact__info-card--schedule {
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.contact__info-card {
		background: white;
		border-radius: var(--border-radius);
		padding: 0;
		box-shadow: var(--shadow-light);
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
		overflow: hidden;
		position: relative;
	}

	.contact__info-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-medium);
	}

	.contact__info-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
	}

	/* Card Header */
	.card__header {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem 1.5rem 0 1.5rem;
		margin-bottom: 1rem;
	}

	.card__title h4 {
		color: var(--text-dark);
		font-size: 1.1rem;
		font-weight: 600;
		margin: 0 0 0.25rem 0;
	}

	.card__subtitle {
		color: var(--text-light);
		font-size: 0.85rem;
		margin: 0;
		font-style: italic;
	}

	.info__icon {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.25rem;
		flex-shrink: 0;
	}

	.info__content {
		padding: 0 1.5rem 1.5rem 1.5rem;
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	/* Address Info */
	.address__info {
		margin-bottom: 1.5rem;
	}

	.address__main {
		display: flex;
		align-items: flex-start;
		gap: 0.75rem;
		padding: 1rem;
		background: linear-gradient(135deg, rgba(37, 154, 140, 0.08) 0%, rgba(37, 154, 140, 0.03) 100%);
		border-radius: 8px;
		border: 1px solid rgba(37, 154, 140, 0.15);
	}

	.address__main i {
		color: var(--primary-color);
		margin-top: 0.125rem;
		flex-shrink: 0;
	}

	.address__main div {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.address__main strong {
		color: var(--text-dark);
		font-size: 0.95rem;
		font-weight: 600;
	}

	.address__main span {
		color: var(--text-light);
		font-size: 0.85rem;
	}

	/* Clinic Features */
	.clinic__features {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0.75rem;
	}

	.feature {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem;
		background: rgba(37, 154, 140, 0.05);
		border-radius: 6px;
		border-left: 3px solid var(--primary-color);
		transition: all 0.3s ease;
	}

	.feature:hover {
		background: rgba(37, 154, 140, 0.1);
		transform: translateX(2px);
	}

	.feature i {
		color: var(--primary-color);
		width: 14px;
		flex-shrink: 0;
		font-size: 0.9rem;
	}

	.feature span {
		color: var(--text-light);
		font-size: 0.8rem;
		font-weight: 500;
	}

	/* Schedule Styles */
	.schedule {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.schedule__item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.75rem;
		background: rgba(37, 154, 140, 0.05);
		border-radius: 8px;
		border-left: 3px solid var(--primary-color);
		transition: all 0.3s ease;
	}

	.schedule__item:hover {
		background: rgba(37, 154, 140, 0.1);
		transform: translateX(2px);
	}

	.schedule__item--closed {
		background: rgba(239, 68, 68, 0.05);
		border-left-color: #ef4444;
	}

	.schedule__item--closed:hover {
		background: rgba(239, 68, 68, 0.1);
	}

	.schedule__day {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.schedule__day i {
		color: var(--primary-color);
		width: 14px;
		flex-shrink: 0;
		font-size: 0.85rem;
	}

	.schedule__item--closed .schedule__day i {
		color: #ef4444;
	}

	.schedule__day span {
		color: var(--text-light);
		font-size: 0.9rem;
		font-weight: 500;
	}

	.schedule__item strong {
		color: var(--text-dark);
		font-weight: 600;
		font-size: 0.9rem;
	}

	.schedule__item--closed strong {
		color: #ef4444;
	}

	/* Emergency Info */
	.emergency__info {
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
		border-radius: 8px;
		padding: 1rem;
		border: 1px solid rgba(59, 130, 246, 0.2);
	}

	.emergency__header {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
	}

	.emergency__header i {
		color: #3b82f6;
		font-size: 0.9rem;
	}

	.emergency__header span {
		color: #3b82f6;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.emergency__info p {
		color: var(--text-light);
		font-size: 0.85rem;
		line-height: 1.4;
		margin: 0;
	}

	/* Schedule Note */
	.schedule__note {
		margin-top: 1rem;
		padding: 0.75rem;
		background: rgba(59, 130, 246, 0.1);
		border-radius: 8px;
		border-left: 3px solid #3b82f6;
		display: flex;
		align-items: flex-start;
		gap: 0.5rem;
	}

	.schedule__note i {
		color: #3b82f6;
		margin-top: 0.125rem;
		flex-shrink: 0;
	}

	.schedule__note span {
		color: var(--text-light);
		font-size: 0.85rem;
		line-height: 1.4;
	}

	.info__icon {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.25rem;
		margin-bottom: 1rem;
	}

	.info__content h4 {
		color: var(--text-dark);
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
	}

	.info__content p {
		color: var(--text-light);
		line-height: 1.6;
		margin-bottom: 0.75rem;
	}

	.info__link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.info__link:hover {
		color: var(--accent-color);
	}

	/* Schedule */
	.schedule {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.schedule__item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem;
		background: rgba(37, 154, 140, 0.05);
		border-radius: 6px;
		border-left: 3px solid var(--primary-color);
	}

	.schedule__item--closed {
		background: rgba(239, 68, 68, 0.05);
		border-left-color: #ef4444;
	}

	.schedule__item span {
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.schedule__item strong {
		color: var(--text-dark);
		font-weight: 600;
	}

	.schedule__item--closed strong {
		color: #ef4444;
	}

	/* Services List */
	.services__list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.services__list li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 0;
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.services__list i {
		color: var(--primary-color);
		width: 16px;
		flex-shrink: 0;
	}

	/* Rating */
	.rating {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-top: 0.75rem;
	}

	.stars {
		display: flex;
		gap: 0.25rem;
	}

	.stars i {
		color: #fbbf24;
		font-size: 0.9rem;
	}

	.rating span {
		color: var(--text-light);
		font-size: 0.85rem;
		font-weight: 500;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.contact {
			padding: 4rem 0;
		}

		.contact__cards {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			margin-bottom: 3rem;
		}

		.contact__card {
			padding: 1.5rem;
		}

		.contact__location {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.map__container {
			height: 300px;
		}

		.contact__info-section {
			gap: 1.25rem;
			height: auto;
		}

		.clinic__features {
			grid-template-columns: 1fr;
			gap: 0.5rem;
		}

		.feature {
			padding: 0.6rem;
		}

		.feature span {
			font-size: 0.8rem;
		}

		.contact__actions {
			flex-direction: column;
