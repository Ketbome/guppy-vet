---
import ServiceCard from '../ui/ServiceCard.astro';

const services = [
	{
		icon: 'fa-stethoscope',
		title: 'Consultas Veterinarias',
		description: 'Atención médica completa en clínica y a domicilio para el bienestar de tu mascota',
		features: [
			'Consultas en clínica',
			'Consultas a domicilio',
			'Examen físico completo',
			'Diagnóstico profesional'
		]
	},
	{
		icon: 'fa-syringe',
		title: 'Vacunación y Prevención',
		description: 'Protección completa con vacunas, desparasitación y microchip para tu mascota',
		features: [
			'Vacunas esenciales',
			'Desparasitación interna y externa',
			'Implantación de microchip',
			'Calendario personalizado'
		],
		isFeatured: true
	},
	{
		icon: 'fa-microscope',
		title: 'Diagnóstico Avanzado',
		description: 'Exámenes especializados para diagnósticos precisos y tratamientos efectivos',
		features: [
			'Exámenes de laboratorio',
			'Ecografías',
			'Análisis clínicos',
			'Diagnóstico por imagen'
		]
	},
	{
		icon: 'fa-scissors',
		title: 'Cirugías',
		description: 'Procedimientos quirúrgicos seguros con tecnología moderna y cuidado especializado',
		features: [
			'Cirugías de rutina',
			'Procedimientos especializados',
			'Anestesia segura',
			'Cuidado post-operatorio'
		]
	},
	{
		icon: 'fa-cut',
		title: 'Cuidado y Estética',
		description: 'Servicios de cuidado personal profesional para mantener a tu mascota saludable',
		features: [
			'Corte de uñas profesional',
			'Limpieza de oídos',
			'Cuidado de pelaje',
			'Revisión de patas'
		]
	},
	{
		icon: 'fa-plus',
		title: 'Farmacia y Accesorios',
		description: 'Venta de medicamentos veterinarios y accesorios para el cuidado de tu mascota',
		features: [
			'Medicamentos veterinarios',
			'Accesorios para mascotas',
			'Suplementos nutricionales',
			'Productos de cuidado'
		]
	}
];
---

<section id="servicios" class="services">
	<div class="container">
		<div class="section-header">
			<span class="section-subtitle">Lo que ofrecemos</span>
			<h2 class="section-title">Nuestros Servicios</h2>
			<p class="section-description">
				Ofrecemos una amplia gama de servicios veterinarios para mantener a tu mascota saludable y feliz
			</p>
		</div>
		
		<div class="services__grid">
			{services.map(service => (
				<ServiceCard
					icon={service.icon}
					title={service.title}
					description={service.description}
					features={service.features}
					isFeatured={service.isFeatured || false}
				/>
			))}
		</div>
	</div>
</section>

<style>
	/* Services Section */
	.services {
		padding: 6rem 0;
		background: var(--text-white);
	}

	.services__grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
	}

	@media (max-width: 768px) {
		.services__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
