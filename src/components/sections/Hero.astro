<section id="inicio" class="hero">
	<div class="hero__container container">
		<div class="hero__content">
			<span class="hero__subtitle">Bienvenidos a</span>
			<h1 class="hero__title">
				Guppy Pet
				<span class="hero__title-accent">Veterinaria</span>
			</h1>
			<p class="hero__description">
				Cuidamos a tus mascotas con amor, profesionalismo y la mejor tecnología veterinaria. 
				Tu compañero peludo merece el mejor cuidado médico.
			</p>
			<div class="hero__buttons">
				<a href="https://wa.me/56992434668?text=Hola,%20me%20gustaría%20agendar%20una%20cita%20para%20mi%20mascota" class="btn btn--primary btn--large" target="_blank">
					<i class="fab fa-whatsapp"></i>
					Agendar por WhatsApp
				</a>
				<a href="tel:+56992434668" class="btn btn--secondary btn--large">
					<i class="fas fa-phone"></i>
					Llamar para Agendar
				</a>
			</div>
		</div>
		<div class="hero__image">
			<img src="/hero-pets.jpg" alt="Mascotas felices en Guppy Pet" class="hero__img">
			<div class="hero__badges">
				<div class="badge">
					<i class="fas fa-award"></i>
					<span>2+ Años</span>
				</div>
				<div class="badge">
					<i class="fas fa-heart"></i>
					<span>500+ Mascotas</span>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Hero Section */
	.hero {
		padding: calc(var(--header-height) + 2rem) 0 4rem;
		background: linear-gradient(135deg, #f8fffe 0%, #edfaf9 100%);
	}

	.hero__container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero__subtitle {
		color: var(--primary-color);
		font-weight: 600;
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 0.5rem;
		display: block;
	}

	.hero__title {
		font-size: 3.5rem;
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: 1.5rem;
		line-height: 1.1;
	}

	.hero__title-accent {
		color: var(--primary-color);
	}

	.hero__description {
		font-size: 1.25rem;
		color: var(--text-light);
		line-height: 1.6;
		margin-bottom: 2.5rem;
	}

	.hero__buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero__image {
		position: relative;
	}

	.hero__img {
		width: 100%;
		height: auto;
		border-radius: 20px;
		box-shadow: var(--shadow-large);
	}

	.hero__badges {
		position: absolute;
		top: 2rem;
		right: 2rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.badge {
		background: white;
		padding: 1rem;
		border-radius: var(--border-radius);
		box-shadow: var(--shadow-medium);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary-color);
		font-weight: 600;
		font-size: 0.875rem;
	}

	.badge i {
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.hero__container {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero__title {
			font-size: 2.5rem;
		}

		.hero__buttons {
			justify-content: center;
		}

		.hero__badges {
			position: static;
			flex-direction: row;
			justify-content: center;
			margin-top: 1rem;
		}
	}
</style>
