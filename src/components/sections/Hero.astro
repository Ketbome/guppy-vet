---
import { Image } from "astro:assets";


---

<section id="inicio" class="hero">
	<div class="hero__container container">
		<div class="hero__content">
			<span class="hero__subtitle">Bienvenidos a</span>
			<h1 class="hero__title">
				<span class="hero__title-accent">Guppy</span>
                <br>
				Vet
			</h1>
			<p class="hero__description">
				Cuidamos a tus mascotas con amor, profesionalismo y la mejor tecnología veterinaria. 
				Tu compañero peludo merece el mejor cuidado médico.
			</p>
			<div class="hero__buttons">
				<a href="https://wa.me/56992434668?text=Hola,%20me%20gustaría%20agendar%20una%20cita%20para%20mi%20mascota" class="btn btn--primary btn--large" target="_blank">
					<i class="fab fa-whatsapp"></i>
					Agendar por WhatsApp
				</a>
				<a href="tel:+56992434668" class="btn btn--secondary btn--large">
					<i class="fas fa-phone"></i>
					Llamar para Agendar
				</a>
			</div>
		</div>
		<div class="hero__image">
            <div class="hero_img">
                <Image src="/guppy.webp" alt="Mascotas felices en Guppy Pet" class="hero__img" width="411" height="512" />
            </div>
			<div class="hero__badges">
				<div class="badge">
					<i class="fas fa-award"></i>
					<span>10+ Años</span>
				</div>
				<div class="badge">
					<i class="fas fa-heart"></i>
					<span>500+ Mascotas</span>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Hero Section */
	.hero {
		padding: calc(var(--header-height) + 2rem) 0 4rem;
		background: linear-gradient(135deg, #f8fffe 0%, #edfaf9 100%);
	}

	.hero__container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero__subtitle {
		color: var(--primary-color);
		font-weight: 600;
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 0.5rem;
		display: block;
	}

	.hero__title {
		font-size: 3.5rem;
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: 1.5rem;
		line-height: 1.1;
        text-align: end;
        width: 180px;
	}

	.hero__title-accent {
		color: var(--primary-color);
	}

	.hero__description {
		font-size: 1.25rem;
		color: var(--text-light);
		line-height: 1.6;
		margin-bottom: 2.5rem;
	}

	.hero__buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero__image {
        justify-content: space-between;
        display: flex;
		overflow: hidden;
		border-radius: 20px;
	}

	.hero_img {
		width: 50%;
		border-radius: 20px;
		box-shadow: var(--shadow-large);
        overflow: hidden;
        position: relative;
	}

    .hero__img {
        width: 100%;
        height: auto;
        border-radius: 20px;
        box-shadow: var(--shadow-large);
        transform: scale(1.5) translateX(5%);
    }

	.hero__badges {
		top: 2rem;
		right: 2rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.badge {
		background: white;
		padding: 1rem;
		border-radius: var(--border-radius);
		box-shadow: var(--shadow-medium);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary-color);
		font-weight: 600;
		font-size: 0.875rem;
	}

	.badge i {
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.hero {
			padding: calc(var(--header-height) + 1rem) 0 3rem;
		}

		.hero__container {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}

		.hero__content {
			order: 2;
		}

		.hero__image {
			order: 1;
			flex-direction: column;
			align-items: center;
			gap: 1.5rem;
		}

		.hero_img {
			width: 280px;
			height: 280px;
			border-radius: 50%;
			overflow: hidden;
		}

		.hero__img {
			transform: scale(1.8) translateY(-10%);
		}

		.hero__title {
			font-size: 2.5rem;
			text-align: center;
			width: 100%;
		}

		.hero__description {
			font-size: 1.1rem;
		}

		.hero__buttons {
			justify-content: center;
			flex-direction: column;
			align-items: center;
		}

		.hero__buttons .btn {
			width: 100%;
			max-width: 300px;
		}

		.hero__badges {
			position: static;
			flex-direction: row;
			justify-content: center;
			gap: 0.75rem;
		}

		.badge {
			padding: 0.75rem;
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding: calc(var(--header-height) + 0.5rem) 0 2rem;
		}

		.hero__container {
			gap: 1.5rem;
		}

		.hero_img {
			width: 240px;
			height: 240px;
		}

		.hero__title {
			font-size: 2rem;
		}

		.hero__description {
			font-size: 1rem;
			margin-bottom: 2rem;
		}

		.hero__buttons {
			gap: 0.75rem;
		}

		.hero__badges {
			flex-direction: column;
			gap: 0.5rem;
		}

		.badge {
			padding: 0.5rem 0.75rem;
			font-size: 0.75rem;
		}
	}

	@media (min-width: 769px) and (max-width: 1024px) {
		.hero__container {
			gap: 3rem;
		}

		.hero__title {
			font-size: 3rem;
		}

		.hero__description {
			font-size: 1.1rem;
		}

		.hero_img {
			width: 45%;
		}
	}
</style>
