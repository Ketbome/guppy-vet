<style>
	/* Footer */
	.footer {
		background: var(--text-dark);
		color: #cbd5e0;
		padding: 4rem 0 2rem;
	}

	.footer__content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 4rem;
		margin-bottom: 3rem;
	}

	.footer__logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
	}

	.footer__logo-img {
		width: 100px;
		height: 70px;
	}

	.footer__logo-text {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--primary-color);
	}

	.footer__description {
		color: #a0aec0;
		line-height: 1.6;
		margin-bottom: 2rem;
		max-width: 300px;
	}

	.footer__social {
		display: flex;
		gap: 1rem;
	}

	.social-link {
		width: 40px;
		height: 40px;
		background: var(--primary-color);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: var(--accent-color);
		transform: translateY(-2px);
	}

	.footer__links {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.footer__title {
		color: white;
		font-size: 1.125rem;
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.footer__list {
		list-style: none;
		padding: 0;
	}

	.footer__list li {
		margin-bottom: 0.75rem;
	}

	.footer__link {
		color: #a0aec0;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer__link:hover {
		color: var(--primary-color);
	}

	.footer__contact {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #a0aec0;
		font-size: 0.875rem;
	}

	.footer__contact i {
		color: var(--primary-color);
		width: 16px;
	}

	.footer__bottom {
		border-top: 1px solid #4a5568;
		padding-top: 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.footer__copyright {
		color: #a0aec0;
		font-size: 0.875rem;
	}

	.footer__legal {
		display: flex;
		gap: 2rem;
	}

	.footer__legal-link {
		color: #a0aec0;
		text-decoration: none;
		font-size: 0.875rem;
		transition: color 0.3s ease;
	}

	.footer__legal-link:hover {
		color: var(--primary-color);
	}

	@media (max-width: 768px) {
		.footer__content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.footer__links {
			grid-template-columns: 1fr;
			text-align: left;
		}

		.footer__bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
